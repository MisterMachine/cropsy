<div class="component-cropsy">
    <header class="notifications">
        <div data-alert class="alert-box">
            Get started with cropsy
            <a href="#" class="close">&times;</a>
        </div>
    </header>

    <section class="crop-stage">
       <div class="image-original">
           <figure class="original">
                <img src="http://fillmurray.com/1280/920">
           </figure>
           
           <div class="selection ghost">
           </div>
       </div>

       <footer>
        <fieldset class="toolbar">
            <div class="tool-aspect">
                <button class="radius">Aspect Ratio</button>
            </div>

            <ul class="tool-zoom button-group radius">
                <li><button>Zoom In</button></li>
                <li><button>Zoom Out</button></li>
            </ul>

            <div class="tool-crop">
                <button class="radius">Crop</button>
            </div>
        </fieldset> 
        </footer>
    </section>

