<div class="component-cropsy">
  <!-- Outlet: Notification -->
  <header class="notifications">
    <div data-alert class="alert-box">
      {{#link-to "index"}}Get started with {{Cropsy.applicationName}}{{/link-to}}
      <a {{action 'closeNotification' this }} class="close">&times;</a>
    </div>
  </header>

  {{outlet}}

  <!-- Outlet: Stage -->
  <section class="crop-stage">
   <div class="image-original">
     <figure class="original">
        <img src="http://fillmurray.com/1280/920">
     </figure>
     <div class="selection">
     </div>
   </div>
  </section>

  <!-- Outlet: Results -->
  <aside class="result-panel">
    <figure class="result">
      <img src="http://fillmurray.com/420/420">
    </figure>

    <fieldset>
      <label>Height
        {{input type="text" placeholder="px"}}
      </label>

      <label>Width
        {{input type="text" placeholder="px"}}
      </label>
    </fieldset>

    <button {{action 'finishCropping' this }}>Finish</button>
  </aside>

  <!-- Outlet: Toolbar -->
  <footer class="toolbar">
    <fieldset>
      <button {{action 'setAspectRatio' this }}>Aspect Ratio</button>
    </fieldset>

    <fieldset>
      <button {{action 'zoomIn' this }}>Zoom In</button>
      <button {{action 'zoomOut' this }}>Zoom Out</button>
    </fieldset>

    <fieldset>
      <button {{action 'cropImage' this }}>Crop</button>
    </fieldset>
  </footer>
</div>