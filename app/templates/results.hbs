<aside class="result-panel">
  <figure class="result">
    <img src="http://fillmurray.com/420/420">
  </figure>

  <fieldset class="result-sizes">
    <label class="dimension">X
      {{input type="text" placeholder="px" valueBinding="controller.cropX"}}
    </label>

    <label class="dimension">Y
      {{input type="text" placeholder="px" valueBinding="controller.cropY"}}
    </label>

    <label class="dimension">Width
      {{input type="text" placeholder="px" valueBinding="controller.cropW"}}
    </label>

    <label class="dimension">Height
      {{input type="text" placeholder="px" valueBinding="controller.cropH"}}
    </label>
  </fieldset>

  <button class="secondary radius" {{action 'cancel' this }}><i class="icon-close"></i>Cancel</button>
  <button class="success radius" {{action 'finish' this }}><i class="icon-checkmark"></i>Finish</button>
</aside>
